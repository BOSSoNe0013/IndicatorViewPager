<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

        <com.b1project.indicatorviewpager.IndicatorViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/helpViewPager"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            custom:indicatorRadius="4dp"
            custom:indicatorVerticalMargin="4dp"
            custom:indicatorPadding="4dp"
            custom:indicatorPosition="bottom"
            custom:indicatorShape="circle"
            custom:indicatorColor="@android:color/white"
            custom:indicatorSelectionColor="@android:color/black">


            <TextView android:text="1" android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/page1"
                android:textSize="52sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView android:text="2" android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/page2"
                android:textSize="52sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView android:text="3" android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/page3"
                android:textSize="52sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView android:text="4" android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/page4"
                android:textSize="52sp"
                android:textStyle="bold"
                android:gravity="center" />

        </com.b1project.indicatorviewpager.IndicatorViewPager>

</RelativeLayout>
